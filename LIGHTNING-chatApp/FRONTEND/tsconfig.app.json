{
  "compilerOptions": {
    "incremental": true,
    // If you want faster incremental builds, uncomment:
    // "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Bundler mode (good for Vite/Next) */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Strictness & linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    // ‚ùå Removed "noUncheckedSideEffectImports"
  },
  "include": [
    "src",
    "componentsSelfMade/ui/splite.tsx",
    "componentsSelfMade/footerComponent.tsx",
    "componentsSelfMade/headerComponent.tsx"
  ]
}
